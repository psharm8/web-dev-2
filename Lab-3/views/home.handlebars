<h1 class="text-center">{{pageTitle}}</h1>
<div class="row">
    <div class="col-sm-12 col-md-3">
        <nav class="navbar navbar-dark bg-dark">
            <ul class="navbar-nav">
                {{#each products}}
                <li><a class="nav-link" href="#{{productId}}">{{name}}</a></li>
                {{/each}}
            </ul>
        </nav>
    </div>
    <div class="col-sm-12 col-md-9">
        <div class="row">
            {{#each products}}
            <div class="col-md-6 col-lg-4">
                <div class="card" id="{{productId}}">
                    <img class="card-img-top" src="{{img}}" alt="{{name}}">
                    <div class="card-body">
                        <h2 class="card-title" data-toggle="modal" data-target="#item-details" data-product-name="{{name}}" data-product-details="{{details}}"
                            data-product-img="{{img}}"><a href="#">{{name}}</a></h2>
                        <p class="card-text">{{summary}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="item-details" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="product-title">Modal title</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="conatiner">
                        <div class="row">
                            <div class="col-sm-4">
                                <img id="product-img" class="card-img-top" src="." alt=".">
                            </div>
                            <div class="col-sm-8">
                                <div class="col">
                                    <div id="product-details"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>